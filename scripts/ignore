#!/usr/bin/env python3

import argparse
import sys

from lib import foreach_repo

parser = argparse.ArgumentParser(description="Generate gitignore file")
parser.add_argument("repos", nargs="*", default=[])
args = parser.parse_args(sys.argv[1:])

f = open(".gitignore", "w")

f.write("# This is an automatically generated file. See scripts/ignore\n\n")

f.write("/*.build\n")
f.write("/*.buildinfo\n")
f.write("/*.changes\n")
f.write("/*.deb\n")
f.write("/*.dsc\n")
f.write("/*.tar\n")
f.write("/*.tar.*\n")
f.write("/*.upload\n")
f.write("/_build/\n")
f.write("\n")

def callback(repo):
    print("\x1B[1m" + repo["name"] + "\x1B[0m")

    f.write("/" + repo["name"] + "/\n")

foreach_repo(callback, args.repos)

f.close()
